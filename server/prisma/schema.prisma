generator client {
  provider               = "prisma-client"
  output                 = "../src/generated/prisma"
  moduleFormat           = "cjs"
  generatedFileExtension = "ts"
  importFileExtension    = "ts"
}

datasource db {
  provider = "postgresql"
}

model Receipt {
  id         Int      @id @default(autoincrement())
  imageId    String?  @unique
  date       BigInt
  total      Int
  category   Category @relation(fields: [categoryId], references: [id])
  tag        Tag      @relation(fields: [tagId], references: [id])
  categoryId Int
  tagId      Int
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  receipts Receipt[]
}

model Tag {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  receipts Receipt[]
}

model Link {
  id        Int    @id @default(autoincrement())
  url       String
  code      String @unique
  shortUrl  String @unique
  clicks    Int
  createdAt BigInt
}
